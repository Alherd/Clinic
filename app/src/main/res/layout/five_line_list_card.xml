<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

        <TextView
            android:id="@+id/text1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_add_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1_1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/doctor"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1_1"
            android:layout_toRightOf="@id/text_add_1"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_add_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2_1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/date_survey"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2_1"
            android:layout_toRightOf="@id/text_add_2"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_add_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3_1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/diagnosis"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3_1"
            android:layout_toRightOf="@id/text_add_3"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_add_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4_1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/note"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text5_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4_1"
            android:layout_toRightOf="@id/text_add_4"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:textSize="16sp"/>
    </RelativeLayout>
</ScrollView>